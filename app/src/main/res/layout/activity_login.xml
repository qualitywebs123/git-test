<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ee3861"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/btn_back"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-50dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#ee3861"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edttxt_design"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />


        <EditText
            android:id="@+id/edt_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edttxt_design"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_frgt_password"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="200dp"
                android:text="Forgot Password?"></TextView>


        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_back"
            android:text="Login"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_dnt_haveAcc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Don't have an account?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_signUp"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textColor="@color/white" />


    </LinearLayout>


</LinearLayout>



